<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph"
    app:startDestination="@id/housesFragment">

    <fragment
        android:id="@+id/nav_splash_fragment"
        android:name="ru.skillbranch.gameofthrones.presentation.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_housesFragment"
            app:destination="@id/housesFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/housesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/housesFragment"
        android:name="ru.skillbranch.gameofthrones.presentation.fragments.HousesFragment"
        android:label="fragment_houses"
        tools:layout="@layout/fragment_houses">
        <action
            android:id="@+id/action_housesFragment_to_characterFragment"
            app:destination="@id/characterFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterFragment"
        android:name="ru.skillbranch.gameofthrones.presentation.fragments.CharacterFragment"
        android:label="fragment_character"
        tools:layout="@layout/fragment_character" >
        <argument
            android:name="characterId"
            app:argType="long" />
        <argument
            android:name="houseName"
            app:argType="string"
            android:defaultValue="Stark" />
    </fragment>
</navigation>
